<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="TaskCmdBound">Task Bound</Button>
            <Button x:Name="ObsCmdBound">Observe Bound</Button>
            <Button x:Name="TaskExeDirect"
                    Click="TaskExeDirect_Click">Task Execute OnClick</Button>
            <Button x:Name="TaskExeAsyncDirect"
                    Click="TaskExeAsyncDirect_Click">Task ExecuteAsync Action OnClick</Button>
            <Button x:Name="ObsExeDirect"
                    Click="ObsExeDirect_Click">Obs Execute OnClick</Button>
        </StackPanel>
    </Grid>
</Window>
